<!-- list-all-orders.ejs -->
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>List All Orders</title>
    <!-- Include Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        .wrapper {
            display: flex;
        }

        #sidebar {
            min-width: 250px;
            background-color: #333;
            padding: 20px;
            color: white;
        }

        #content {
            flex-grow: 1;
            padding: 20px;
        }

        nav img {
            height: 50px;
        }

        nav button {
            background-color: #4CAF50;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .container {
            margin-top: 20px;
        }

        table {
            width: 100%;
            margin-bottom: 20px;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 12px;
            text-align: left;
        }

        th {
            background-color: #4CAF50;
            color: white;
        } .navbar {
            position: sticky;
            top: 1;
            z-index: 1000;
            margin-left: -20px;
            margin-right: -20px;
            margin-top: -20px;
        }

        .navbar-brand {
            margin-right: 0; /* Remove default margin for the brand */
        }

        .sidebar-link {
            font-size: 18px; /* Adjust the font size as needed */
            font-weight: bold; /* Optional: Add bold styling */
            /* Add any additional styling properties as needed */
        }
        #sidebar {
            min-width: 250px;
            background-color: #333;
            padding: 20px;
            color: white;
            position: sticky;
            top: 0;
            height: 100vh; /* Set a fixed height for the sidebar */
            overflow-y: auto; /* Add scroll if content exceeds the height */
        }
        .pagination-container {
    display: flex;
    justify-content: center;
    margin-top: 50px;
}

.pagination a {
  display: inline-block;
  vertical-align: middle;
  width: 44px;
  color: #000000;
  text-align: center;
  font-size: 14px;
  padding: 3px 0 2px 0;
  user-select: none;
  margin: 0 2px 0 2px;
  border-radius: 4px;
  border: 1px solid #E3E3E3;
  cursor: pointer;
  box-shadow: inset 0 1px 0 0 #FFF, 0 1px 2px #666;
  text-shadow: 0 1px 1px #FFF;
  background-color: #E6E6E6;
  background-image: linear-gradient(top, #F3F3F3, #D7D7D7);
}
.pagination a:hover {
    background-color: #45a049;
    border-color: #000000;
}

.pagination a.active {
    background-color: #45a049;
    border-color: #45a049;
    cursor: default;
}
.pagination span.disabled {
    display: inline-block;
    vertical-align: middle;
    width: 30px;
    height: 30px;
    line-height: 30px;
    color: #ccc;
    text-align: center;
    font-size: 14px;
    margin: 0 5px;
    border-radius: 5px;
    border: 1px solid #ccc;
    background-color: #f9f9f9;
}






    </style>
</head>

<body>
    <div class="wrapper">
        <!-- Sidebar -->
        <%- include('../partials/adminSidebar.ejs', { activePage: 'ordersList' }) %>

        <!-- Page Content -->
        <div id="content">
            <!-- Navbar -->
            <%- include('../partials/adminNavbar.ejs') %>

            <div class="container">
                <form method="post" action="/update-order-status">
                    <h1>List of All Orders</h1>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Product Name</th>
                                <th>Order ID</th>
                                <th>Username</th>
                                <th>Price</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% orders.forEach(order => { %>
                                <tr>
                                    <td><%= order.products && order.products[0] && order.products[0].product && order.products[0].product.name || 'N/A' %></td>
                                    <td><%= order._id %></td>
                                    <td><%= order.user && order.user.username || 'N/A' %></td>
                                    <td>â‚¹<%= order.products && order.products[0] && order.products[0].price || 'N/A' %></td>
                                    <td>
                                        <select name="status_<%= order._id %>">
                                            <option value="Confirmed" <%= order.status === 'Confirmed' ? 'selected' : '' %>>Confirmed</option>
                                            <option value="Shipped" <%= order.status === 'Shipped' ? 'selected' : '' %>>Shipped</option>
                                            <option value="OutForDelivery" <%= order.status === 'OutForDelivery' ? 'selected' : '' %>>Out For Delivery</option>
                                            <option value="Cancelled" <%= order.status === 'Cancelled' ? 'selected' : '' %>>Cancelled</option>
                                            <option value="Delivered" <%= order.status === 'Delivered' ? 'selected' : '' %>>Delivered</option>
                                        </select>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                    <button type="submit">Update Status</button>
                   
                </form>
                <div class="container">
                <button class="btn btn-primary float-right" onclick="location.href='/returnRequests'">See all return requests</button>
                </div>
            </div>
            <div class="container">
            <div class="pagination-container">
                <div class="pagination">
                  <% for(let i = 1; i <= pages; i++) { %>
                    <a href="?page=<%= i %>" class="<%= i === current ? 'active' : '' %>"><%= i %></a>
                  <% } %>
                </div>
              </div>
              </div>
              
        </div>
     
          
    </div>

    <!-- Include Bootstrap JS and Popper.js -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
        $("#sidebar-toggle").click(function() {
            $("#sidebar").toggle();
        });
    </script>
</body>

</html>
