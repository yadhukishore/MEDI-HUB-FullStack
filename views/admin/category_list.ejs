<!-- category_list.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Category List</title>
    <!-- Include Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        .wrapper {
            display: flex;
        }

        #sidebar {
            min-width: 250px;
            background-color: #333;
            padding: 20px;
            color: white;
            position: sticky;
            top: 0;
            height: 100vh;
            overflow-y: auto;
        }

        #content {
            flex-grow: 1;
            padding: 20px;
        }

        nav img {
            height: 50px;
        }

        nav button {
            background-color: #4CAF50;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .container {
            margin-top: 20px;
        }

        table {
            width: 100%;
            margin-top: 20px;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #4CAF50;
            color: white;
        }

        .navbar {
            position: sticky;
            top: 0;
            z-index: 1000;
            margin-left: -20px;
            margin-right: -20px;
            margin-top: -20px;
        }

        .navbar-brand {
            margin-right: 0;
        }

        .sidebar-link {
            font-size: 18px;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="wrapper">
        <!-- Sidebar -->
        <div id="sidebar">
            <h2>Admin Panel</h2>
            <hr style="border-top: 1px solid white; width: 100%;">
            <!-- Navigation links in the sidebar -->
            <a href="/admin/userList" class="btn btn-info mb-3 sidebar-link">Users List</a><br>  <hr style="border-top: 1px solid white; width: 100%;">
            <a href="/admin" class="btn btn-info mb-3 sidebar-link">Product List</a><br>  <hr style="border-top: 1px solid white; width: 100%;">
            <a href="/admin/categoryList" class="btn btn-warning mb-3 sidebar-link">Category List</a><br>  <hr style="border-top: 1px solid white; width: 100%;">
        </div>

        <!-- Page Content -->
        <div id="content">
            <!-- Navbar -->
            <nav class="navbar navbar-dark bg-dark fixed-top">
                <button class="btn btn-dark" id="sidebar-toggle">MENU</button>
                <!-- Logo on the left -->
                <img src="/public/images/logoMedi.jpg" alt="LoGo">
                <!-- Logout button on the right -->
                <form action="/admin/logout" method="POST">
                    <button type="submit" class="btn btn-outline-light">Logout</button>
                </form>
            </nav>

            <!-- Page Content -->
            <div class="container">
                <h1>Category List</h1>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Category</th>
                            <th>Product Name</th>
                            <th>Actions</th>
                            <th>Check</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% categories.forEach(category => { %>
                            <% products.filter(product => product.category === category).forEach(product => { %>
                                <tr>
                                    <td><%= category %></td>
                                    <td><%= product.name %></td>
                                    <td>
                                        <a href="/edit-product/<%= product._id %>" class="btn btn-warning">Edit</a>
                                        <a href="/delete-product/<%= product._id %>" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete <%= product.name %> ?')">Delete</a>
                                    </td>
                                    <td><%= product.deleted ? 'Not Listed' : 'Listed' %></td>
                                </tr>
                            <% }); %>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Include Bootstrap JS and Popper.js (required for Bootstrap dropdowns) -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <script>
        $("#sidebar-toggle").click(function() {
            $("#sidebar").toggle();
        });
    </script>
</body>
</html>
