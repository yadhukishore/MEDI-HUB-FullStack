<%- include("../../views/partials/header.ejs") %>
    <title>Add Category</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">

   <link rel="stylesheet" href="/public/stylesheets/admin/add_category.css">
</head>
<body>
    <div class="wrapper">
        <!-- Sidebar -->
        <%- include('../partials/adminSidebar.ejs', { activePage: 'categoryList' }) %>
    

        <!-- Page Content -->
        <div id="content">
           <!-- Navbar -->
           <%- include('../partials/adminNavbar.ejs') %>
<!-- Page Content -->

    <div class="container mt-5">
        <div class="card">
            <div class="card-header bg-success text-white">
                <h1 class="mb-0">Add Category</h1>
            </div>
            <div class="card-body">
                <form class="form" method="post" action="/add_category">
                   
                      
                      <% if (errorMessage && errorMessage.length > 0) { %>
                        <div class="alert alert-danger" role="alert">
                          <%= errorMessage[0] %>
                        </div>
                      <% } %>
                      
                    <div class="mb-3">
                        <label for="categoryName" class="form-label">Category Name</label>
                        <input type="text" class="form-control form-control-lg" id="categoryName" name="categoryName" placeholder="Enter category name" aria-label="Category Name">
                    </div>

                    <!-- Add more form fields as needed -->

                    <button type="submit" class="btn btn-success">Add Category</button>
                </form>
            </div>
        </div>
    </div>
    </div>
    </div>

    <!-- Bootstrap JS and Popper.js -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js" integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+" crossorigin="anonymous"></script>
</body>
</html>
