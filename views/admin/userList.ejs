<!-- views/admin/userList.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>UserList</title>
    <!-- Include Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        .wrapper {
            display: flex;
        }

        #sidebar {
            min-width: 250px;
            background-color: #333;
            padding: 20px;
            color: white;
            position: sticky;
            top: 0;
            height: 100vh; /* Set a fixed height for the sidebar */
            overflow-y: auto; /* Add scroll if content exceeds the height */
        }

        #content {
            flex-grow: 1;
            padding: 20px;
        }

        nav img {
            height: 50px; /* Set the desired height for your logo */
        }

        nav button {
            background-color: #4CAF50;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .container {
            margin-top: 20px; /* Add space between the navigation bar and content */
        }

        .add-product-button {
            margin-bottom: 20px; /* Add space below the "Add Product" button */
        }

        table {
            width: 100%;
            margin-bottom: 20px; /* Add space below the table */
        }

        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #4CAF50;
            color: white;
        }

        .navbar {
            position: sticky;
            top: 0;
            z-index: 1000;
            margin-left: -20px;
            margin-right: -20px;
            margin-top: -20px;
        }

        .navbar-brand {
            margin-right: 0; /* Remove default margin for the brand */
        }

        .sidebar-link {
            font-size: 18px; /* Adjust the font size as needed */
            font-weight: bold; /* Optional: Add bold styling */
            /* Add any additional styling properties as needed */
        }
    </style>
</head>
<body>

    
    <div class="wrapper">
      
        <!-- Sidebar -->
        <%- include('../partials/adminSidebar.ejs', { activePage: 'userList' }) %>
      <!-- Page Content -->
      <div id="content">
        <%- include('../partials/adminNavbar.ejs') %>

            <!-- Update the Add User button -->
            

            <div class="container">
                <a href="/admin/add_user" class="btn btn-success add-product-button">Add User</a>
                <h2>Users List</h2>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Blocked</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% users.forEach(user => { %>
                            <tr>
                                <td><%= user.username %></td>
                                <td><%= user.email %></td>
                                <td><%= user.blocked ? 'Blocked' : 'Active' %></td>
                                <td>
                                    <% if (user.blocked) { %>
                                        <a href="/admin/unblock_user/<%= user._id %>" class="btn btn-success">Unblock</a>
                                    <% } else { %>
                                        <a href="/admin/block_user/<%= user._id %>" class="btn btn-danger">Block</a>
                                    <% } %>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Include Bootstrap JS and Popper.js (required for Bootstrap dropdowns) -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <script>
        $("#sidebar-toggle").click(function() {
            $("#sidebar").toggle();
        });
    </script>
</body>
</html>
