<!-- product_details.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <title><%= product.name %> Details</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <style>
    body {
      font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #dfede0;
    }

    nav {
      background-color: #333;
            padding: 10px;
            color: white;
    }

    nav img {
      height: 50px;
      width: 80px;
    }

    .user-dropdown button {
      background-color: #4CAF50;
      color: white;
      border: none;
      border-radius: 5px;
      cursor: pointer;
    }

    #dropdown-content {
      display: none;
      position: absolute;
      background-color: #f9f9f9;
      min-width: 160px;
      box-shadow: 0px 8px 16px 0px rgba(0, 0, 0, 0.2);
      z-index: 1;
    }

    #dropdown-content button {
      color: black;
      padding: 12px 16px;
      text-decoration: none;
      display: block;
      background-color: #f9f9f9;
      border: none;
      width: 100%;
      text-align: left;
    }

    .product-container {
      display: flex;
      align-items: flex-start;
      justify-content: space-between;
      margin: 20px;
    }

    .product-details {
      max-width: 30%;
      position: sticky;
      top: 80px;
    }

    .product-image {
      max-width: 60%;
      overflow: hidden;
      border: 1px solid #ddd;
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .product-image img {
      width: 100%;
      height: auto;
      transition: transform 0.3s;
    }

    .product-image img:hover {
      transform: scale(1.2);
    }

    .action-buttons {
      margin-top: 20px;
      display: flex;
      gap: 10px;
    }

    .btn-add-to-cart {
      background-color: #4CAF50;
      color: white;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      padding: 10px;
    }

    .btn-add-to-wishlist {
      background-color: #FFD700;
      color: black;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      padding: 10px;
    }

    .product-images-container {
      display: flex;
    }

    .thumbnail-images {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 10px;
      margin-right: 20px;
    }

    .thumbnail-images img {
      width: 60px;
      height: 60px;
      cursor: pointer;
      object-fit: cover;
      border: 1px solid #ddd;
      border-radius: 5px;
      transition: transform 0.3s ease-in-out;
    }

    .thumbnail-images img:hover {
      transform: scale(1.2);
    }

    .main-image-container {
      border: 1px solid #f5efef;
      border-radius: 15px;
      overflow: hidden;
      height: 500px;
    }

    .main-image {
      width: 80%;
      height: 50%;
      object-fit: contain;
    }

    h1.display-4 {
      font-size: 2.5rem;
      margin-bottom: 10px;
    }

    p.lead {
      font-size: 1.2rem;
    }

    p.text-muted {
      font-size: 1rem;
    }

    p.h4 {
      font-size: 1.5rem;
    }

    .btn-lg {
      font-size: 1.2rem;
      padding: 10px 20px;
    }

    @media (max-width: 768px) {
      .product-container {
        flex-direction: column;
      }

      .product-details, .product-image {
        max-width: 100%;
        margin: 10px 0;
      }
    }
  </style>
</head>
<body>
  <!-- Bootstrap Navbar -->
    <!-- nav bar -->
    <%- include("../views/partials/userNavbar.ejs") %>


  <!-- Product Details Container -->
  <div class="container product-container">
    <!-- Product Images Container -->
    <div class="product-images-container">
      <!-- Thumbnail Images -->
      <div class="thumbnail-images">
        <% product.images.forEach((image, index) => { %>
          <img src="/public/uploads/<%= image %>" alt="<%= product.name %>" data-target="#productCarousel" data-slide-to="<%= index %>" class="thumbnail-image">
        <% }); %>
      </div>

      <!-- Main Image Carousel -->
      <div id="productCarousel" class="carousel slide main-image-container">
        <div class="carousel-inner">
          <% product.images.forEach((image, index) => { %>
            <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
              <img src="/public/uploads/<%= image %>" alt="<%= product.name %>" class="main-image">
            </div>
          <% }); %>
        </div>
        <a class="carousel-control-prev" href="#productCarousel" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#productCarousel" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>

    <!-- Product Details -->
    <div class="product-details">
      <h1 class="display-4"><%= product.name %> </h1>
      <p class="lead">Details: <%= product.description %></p>
      <p class="text-muted">Category: <%= product.category.categoryName %> </p>
      <p class="h4">Price: <span class="text-success"><strong><%= product.price %> rs</strong></span></p>
      <div class="col-md-6 text-right">
        <!-- Display a message if stock is less than or equal to 5 -->
        <% if (product.stock <= 5 && product.stock > 1) { %>
          <p class="card-text text-danger">Only <%= product.stock %> left!</p>
        <% } else if (product.stock === 1) { %>
          <p class="card-text text-danger">Last in stock!</p>
        <% } else if (product.stock === 0) { %>
          <p class="card-text text-danger">Out of Stock!</p>
        <% } %>
      </div>
      <!-- Additional details or features -->

      <!-- Action buttons -->
      <div class="action-buttons mt-4">
        <button class="btn btn-primary btn-lg">Buy Now</button>
       
        <a href="/add-to-cart/<%= product._id %>" class="btn btn-outline-danger btn-lg"> <% if (user && user.cart && user.cart.some(item => item.product._id.toString() === product._id.toString())) { %>
          Go to Cart
        <% } else { %>
          Add to Cart
        <% } %></a>
        <button class="btn btn-outline-secondary btn-lg">Add to Wishlist</button>
      </div>
    </div>
  </div>

  <!-- Optional: Add Bootstrap JS and Popper.js for Bootstrap functionality -->
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
