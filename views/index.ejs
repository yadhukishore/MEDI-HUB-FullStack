<!-- home.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="Cache-Control" content="no-cache, no-store, must-revalidate">
    <meta http-equiv="Pragma" content="no-cache">
    <meta http-equiv="Expires" content="0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> MediHub </title>
    <!-- Link to Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #dfede0;
        }

        nav {
            background-color: #333;
            padding: 10px;
            color: white;
        }

        nav img {
            height: 50px;
            width: 80px; 
        }

        .login-button {
            background-color: #4CAF50;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .login-button-not-logged-in {
            border: 2px solid #4CAF50;
            background-color: white;
            color: #4CAF50;
        }

        .user-dropdown button {
            background-color: #4CAF50;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        #dropdown-content {
            display: none;
            position: absolute;
            background-color: #f9f9f9;
            min-width: 160px;
            box-shadow: 0px 8px 16px 0px rgba(0, 0, 0, 0.2);
            z-index: 1;
        }

        #dropdown-content button {
            color: black;
            padding: 12px 16px;
            text-decoration: none;
            display: block;
            background-color: #f9f9f9;
            border: none;
            width: 100%;
            text-align: left;
        }

        .product-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-around;
            margin: 20px;
        }

        .card {
            width: 300px;
            margin: 10px;
            box-shadow: 8px 8px 8px rgba(0, 0, 0, 0.1);
        }

        .card img {
            object-fit: cover;
            width: 100%;
            height: 200px;
        }
        .card-body{
            background-color: #e4fae4;
        }
        .card :hover{
            background-color: #dfede0;
        }
        .pagination-container {
            margin-top: 20px;
            display: flex;
            justify-content: center;
        }
    </style>
 
    <script>
        function toggleDropdown() {
            const dropdownContent = document.getElementById('dropdown-content');
            dropdownContent.style.display = (dropdownContent.style.display === 'block') ? 'none' : 'block';
        }
    </script>
</head>
<body>
    <!-- nav bar -->
   <%- include("../views/partials/userNavbar.ejs") %>

    <div class="container">

      <% if (messages.success) { %>
        <div class="alert alert-success">
            <%= messages.success %>
        </div>
    <% } else if (messages.error) { %>
        <div class="alert alert-danger">
            <%= messages.error %>
        </div>
    <% } %>
        <div class="row">
          <!-- Loop through products and create Bootstrap cards -->
          <% products.forEach(product => { %>
            <div class="col-md-4 mb-4">
              <div class="card">
                <a href="/product/<%= product._id %>"> <!-- Add a link to each product -->
                    <% if (product.images.length > 0) { %>
                        <!-- Display only the first image -->
                        <img src="/public/uploads/<%= product.images[0] %>" alt="<%= product.name %>" style="max-width: 100%;">
                    <% } else { %>
                        <!-- Provide a default image or message if there are no images -->
                        <img src="/public/default-image.jpg" alt="No Image" style="max-width: 100%;">
                    <% } %>
                </a>
                <div class="card-body">
                  <h5 class="card-title"><%= product.name %></h5>
                  <!-- <p class="card-text"><%= product.description %></p> -->
                  Category: <%= product.category ? product.category.categoryName : 'N/A' %>

                 
          
                    <!-- row for price and stock message -->
                    <div class="row">
                        <div class="col-md-6">
                          <p class="card-text">â‚¹<strong><%= product.price %> </strong></p>
                        </div>
                        <div class="col-md-6 text-right">
                          <!-- Display a message if stock is less than or equal to 5 -->
                          <% if (product.stock <= 5 && product.stock > 1) { %>
                            <p class="card-text text-danger">Only <%= product.stock %> left!</p>
                          <% } else if (product.stock === 1) { %>
                            <p class="card-text text-danger">Last in stock!</p>
                          <% } else if (product.stock === 0) { %>
                            <p class="card-text text-danger">Out of Stock!</p>
                          <% } %>
                        </div>
                      </div>

                      <a href="/add-to-cart/<%= product._id %>" class="btn btn-warning">
                        <% if (user && user.cart && user.cart.some(item => item.product._id.toString() === product._id.toString())) { %>
                          Go to Cart
                        <% } else { %>
                          Add to Cart
                        <% } %>
                      </a>
                  
                </div>
              </div>
            </div>
          <% }); %>
        </div>
        
      </div>

    <!-- Optional: Add Bootstrap JS and Popper.js for Bootstrap functionality -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
